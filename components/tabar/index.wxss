@import '/css/public.wxss';
.footer{
	position: fixed;
	bottom: 0;
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 80px;
	align-items: center;
	justify-items: center;
	/* background-color: aquamarine; */
	border-top: 1px solid #ddd;
	box-sizing: border-box;
	box-shadow: 0px -1px 4px 0px rgb(0 0 0 / 30%);
}
.footer .item{
	display: flex;
	flex-direction: column;
	/* width: 25%; */
	align-items: center;
	justify-items: center;
}
.footer .item .image{
	display: block;
	width: 34px;
	height: 34px;
}
.footer .item .text{
	font-size: 16px;
}
