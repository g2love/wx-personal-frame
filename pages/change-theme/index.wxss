.content{
	width: 100%;
	overflow-y: scroll;
	/* height: 500px; */
	padding-bottom: 50px;
	box-sizing: border-box;
}
.content .content-box{
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}
.content .item{
	width: calc(100%/3 - 2%);
	/* height: 250px; */
	margin-left: 2%;
	margin-bottom: 20px;
	background-color: #fff;
}
.content .item .image{
	width: 100%;
	height: 200px;
}
.content .item:nth-of-type(3n+3){
	margin-right: 2%;
	width: calc(100%/3 - 4%) ;
}


.content .item .btn{
	width: 100%;
	margin: 0 auto;
	background-color: transparent;
}
.content .item-add{
	display: flex;
	flex-direction: column;
	border: 1px solid #ddd;
	position: relative;
	z-index: 2;
	box-sizing: border-box;
}
.content .item-add .image{
	display: flex;
	align-items: center;
	justify-items: center;
}
.content .item-add .imageBg{
	position: absolute;
	z-index: -1;
}

.content .item-add .text{
	display: block;
	text-align: center;
	width: 100%;
	color: #06ae56;
	font-size: 17px;
    font-weight: 700;
    line-height: 1.5;
}
